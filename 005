#include <stdio.h>

int main()
{
    printf("Desafio: Entrar com um número e dizer se é ou não divisível por 7 e 3\n\n");
    
    int r1, r2;
    int n1;
    printf("entre com um número inteiro: ");
    scanf("%d", &n1);
    
    r1=n1%3;
    r2=n1%7;
    
    if(r1==0 && r2==0)
    { printf("%d é divisível", n1); }
    else
    { printf("%d não é divisível", n1); }

    return 0;
}
