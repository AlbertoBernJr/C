#include <stdio.h>

int main()
{
    int n1,n2;
    int c = 0;
    int t = 0;
    printf("Desafio: fazer o usuário entrar com 2 números, identificar se o primeiro número é par ou ímpar,\nmostrar todos os números pares que estão entre os dois números \ndigitados pelo usuário\n\n");
    printf("digite o primeiro número:");
    scanf("%d", &n1);
    
    if("%d",n1%2==0)
       { printf("\n%d é par\n", n1); }
    else
        { printf("%d é ímpar\n", n1); }
    
    printf("digite o segundo número: ");
    scanf("%d", &n2);
    
    
    
    for(c=n1; c<=n2; c++)
    {   
        if(c%2==0)
        {   
            printf("%d é par\n", c);
            
        }
        
    }

    return 0;
}
